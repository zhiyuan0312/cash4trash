<div class="container footer-push-fix">	
	<h1>New collections</h1>

		<div class="form-group col-md-offset-3 col-md-6" id="collection-form">
			<%= form_for @collection, :method => "post", :url => {:controller => "collections", :action => "update"} do |f| %>
					<div>
					<%= f.label :newspaper %>
					<%= f.text_field :newspaper, class: "form-control", value: "0" %>
					<br>

					<%= f.label :magazine %>
					<%= f.text_field :magazine, class: "form-control", value: "0" %>
					<br>

					<%= f.label :cardboard %>
					<%= f.text_field :cardboard, class: "form-control", value: "0" %>
					<br>

					<%= f.label :plastic %>
					<%= f.text_field :plastic, class: "form-control", value: "0" %>
					<br>

					<%= f.label :tin_metal %>
					<%= f.text_field :tinmetal, class: "form-control", value: "0" %>
					<br>

					<%= f.label :aluminium %>
					<%= f.text_field :aluminium, class: "form-control", value: "0" %>
					<br>

					<%= f.label :confirmation_key %>
					<%= f.text_field :confirmation_key, class: "form-control" %>

          <%= f.hidden_field :schedule_id, :value => @schedule.id %>
					</div>

				<div>
				<br	/>
				<%= f.submit "Submit", class: "btn btn-success" %>
				</div>
			<% end %>
		</div>
	</div>

