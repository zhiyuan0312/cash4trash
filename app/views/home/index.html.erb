                    <% if user_signed_in? %>
                        <li>
                          <%= image_tag current_user.facebook_profile_picture, :class => 'avatar' %>
                        </li>
                        <li>
                        <%= link_to "#{current_user.full_name}", edit_user_registration_path, :class => 'navbar-link' %>
                        </li>
                        <li>
                        <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
                        </li>
                      <% else %>
                        <li>
                          <a data-toggle="modal" href="#signupModal">Sign Up</a>
                        </li>
                        <li>
                          <a data-toggle="modal" href="#loginModal">Login</a>
                        </li>
                      <% end %>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
