<div class="container">
	<div class="row">
		<div class="col-md-6">
			<h1>Rewards Redemption</h1>
		</div>
		<div class="col-md-6">
			<h1 class="points">Points available: <span class="count"><%= current_user.points %></span>GP</h1>
		</div>
</div>

<div class="row">
	<div class="col-md-6">
		<h5>Select your redemption from the options below.</h5>
	</div>
</div>

<div class="row">
	<div class="col-md-3 text-center">
		<div class="rewards aeon">
		</div>
		<div class="redeem_button">
			<button type="button" class="btn btn-success" data-toggle="modal" data-target="#redemptionModal">Redeem</button>
		</div>
	</div>

	<div class="col-md-3 text-center">
		<div class="rewards isetan">
		</div>
		<div class="redeem_button">
		<button type="button" class="btn btn-success" data-toggle="modal" data-target="#redemptionModal">Redeem</button>
	</div>
	</div>

	<div class="col-md-3 text-center">
		<div class="rewards parkson">
		</div>
		<div class="redeem_button">
		<button type="button" class="btn btn-success" data-toggle="modal" data-target="#redemptionModal">Redeem</button>
	</div>
	</div>

	<div class="col-md-3 text-center">
		<div class="rewards cash">
		</div>
			<div class="redeem_button">
			<button type="button" class="btn btn-success" data-toggle="modal" data-target="#redemptionModal">Redeem</button>
		</div>
	</div>
</div>

	<!-- Modal -->
<div id="redemptionModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Redeem RM10 Aeon Voucher</h4>
      </div>
      <div class="modal-body">
        <p>Each Aeon voucher will cost you 100GP</p>
      </div>
      <div class="modal-footer">
      	<button type="button" class="btn btn-default">Confirm</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>